<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="rer.newsletter">

  <metal:block metal:fill-slot="style_slot">
  </metal:block>

  <metal:block metal:fill-slot="javascript_head_slot">
  </metal:block>

  <!-- disattivo le portlet in questa view -->
  <metal:override fill-slot="top_slot"
      tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                  disable_column_two python:request.set('disable_plone.rightcolumn',1);"/>

  <body>
    <metal:main fill-slot="main">
      <metal:main-macro define-macro="main">
        <div id="content-core">
          <h1>Gestione degli Utenti</h1>

          <div style="margin-bottom: 2%;">
            <span id="users-import">
              <button type='button'>Import Users List</button>
              <a href="users_import" class="plone-btn plone-btn-large plone-btn-primary pat-plone-modal"
                      data-pat-plone-modal="width: '770px',height: '430px'," style="display: none;">
              </a>
            </span>

            <span id="users-export">
              <button type='button'>Export Users List</button>
            </span>

            <span id="add-user">
              <button type='button'>Add User</button>
              <a href="adduser_newsletter" class="plone-btn plone-btn-large plone-btn-primary pat-plone-modal"
                      data-pat-plone-modal="width: '770px',height: '430px'," style="display: none;">
              </a>
            </span>

            <span id="delete-user">
              <button type='button'>Delete User</button>
            </span>
          </div>

          <table id="users-table" class="display" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Email</th>
                <th>Creation Date</th>
                <th>Activation's State</th>
              </tr>
            </thead>
          </table>

        </div>
      </metal:main-macro>
    </metal:main>
  </body>
</html>
