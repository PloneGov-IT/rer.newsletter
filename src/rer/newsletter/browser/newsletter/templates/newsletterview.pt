<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="rer.newsletter">

      <metal:block metal:fill-slot="style_slot">
      </metal:block>

      <metal:block metal:fill-slot="javascript_head_slot">
      </metal:block>

      <!-- disattivo le portlet in questa view -->
      <metal:override fill-slot="top_slot"
          tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                      disable_column_two python:request.set('disable_plone.rightcolumn',1);"/>

      <body>
        <metal:main fill-slot="main">
          <metal:main-macro define-macro="main">
            <div id="content-core">

              <ul>
                <li><a href="" tal:attributes="href string:${context/absolute_url}/@@subscribe">Subscribe</a></li>
                <li><a href="" tal:attributes="href string:${context/absolute_url}/@@unsubscribe">Unsubscribe</a></li>
                <li><a href="" tal:attributes="href string:${context/absolute_url}/@@manageusers">Users Manage</a></li>
                <li><a href="" tal:attributes="href string:${context/absolute_url}/@@newsletterhistory">Newsletter History</a></li>
              </ul>



              <h1>Lista di Messaggi</h1>
              <ul tal:define="messages view/getMessageList" tal:condition="messages">
                <li tal:repeat="message messages">
                  <div>
                    <a href='link' tal:attributes='href message/absolute_url' tal:content="message/title">Title</a>
                  </div>
                  <div>
                    <span tal:content="message/state" />
                  </div>
                </li>
              </ul>

            </div>
          </metal:main-macro>
        </metal:main>
      </body>

</html>
