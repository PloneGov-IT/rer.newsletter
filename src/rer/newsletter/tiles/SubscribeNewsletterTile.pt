<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="rer.bandi"
>
  <body>
    <metal:macro define-macro="collection-tile-macro"
        tal:define="helper_view nocall:context/@@newsletter_tile_helper;">

      <section class="portlet portletCollection portletNewsletter"
               i18n:domain="rer.newsletter"
               tal:attributes="class view/getPortletClass">

          <header class="portletHeader"
                  tal:define="header view/data/header">
            <h4 class="portlet-header" tal:condition="header" tal:content="header">
              Title
            </h4>
          </header>

          <div id="channel-subscribe">
            <a class="plone-btn plone-btn-primary pat-plone-modal" href=""
               data-pat-plone-modal="width: '770px',height: '430px',"
               tal:define="portal_type string:${context/portal_type};
                           is_subscribable view/is_subscribable"
               tal:condition="python:portal_type == 'Channel' and is_subscribable"
               tal:attributes="href string:${context/absolute_url}/@@subscribe"
               i18n:translate="subscribe"
               style="margin: 1em">
              Subscribe
            </a>
          </div>

          <!-- inseriere il link -->

      </section>

    </metal:macro>
  </body>
</html>
